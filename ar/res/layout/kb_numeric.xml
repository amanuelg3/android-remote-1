<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <RelativeLayout
        android:id="@+id/layTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/subtitle_bg"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:onClick="onPrev"
            android:src="@drawable/prev" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Number Pad"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:onClick="onNext"
            android:src="@drawable/next" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layTitle"
        android:scrollbars="none" >

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:stretchColumns="0, 1, 2, 3" >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/key_press"
                    android:onClick="onNumClick"
                    android:text="7"
                    android:textAppearance="?android:attr/textAppearanceLargeInverse" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/key_press"
                    android:onClick="onNumClick"
                    android:text="8"
                    android:textAppearance="?android:attr/textAppearanceLargeInverse" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/key_press"
                    android:onClick="onNumClick"
                    android:text="9"
                    android:textAppearance="?android:attr/textAppearanceLargeInverse" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/key_press"
                    android:onClick="onNumClick"
                    android:text="/"
                    android:textAppearance="?android:attr/textAppearanceLargeInverse" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/key_press"
                    android:onClick="onNumClick"
                    android:text="4"
                    android:textAppearance="?android:attr/textAppearanceLargeInverse" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/key_press"
                    android:onClick="onNumClick"
                    android:text="5"
                    android:textAppearance="?android:attr/textAppearanceLargeInverse" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/key_press"
                    android:onClick="onNumClick"
                    android:text="6"
                    android:textAppearance="?android:attr/textAppearanceLargeInverse" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/key_press"
                    android:onClick="onNumClick"
                    android:text="*"
                    android:textAppearance="?android:attr/textAppearanceLargeInverse" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/key_press"
                    android:onClick="onNumClick"
                    android:text="1"
                    android:textAppearance="?android:attr/textAppearanceLargeInverse" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/key_press"
                    android:onClick="onNumClick"
                    android:text="2"
                    android:textAppearance="?android:attr/textAppearanceLargeInverse" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/key_press"
                    android:onClick="onNumClick"
                    android:text="3"
                    android:textAppearance="?android:attr/textAppearanceLargeInverse" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/key_press"
                    android:onClick="onNumClick"
                    android:text="-"
                    android:textAppearance="?android:attr/textAppearanceLargeInverse" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/key_press"
                    android:onClick="onNumClick"
                    android:text="."
                    android:textAppearance="?android:attr/textAppearanceLargeInverse" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/key_press"
                    android:onClick="onNumClick"
                    android:text="0"
                    android:textAppearance="?android:attr/textAppearanceLargeInverse" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/red_key_press"
                    android:onClick="onNumClick"
                    android:text="BS"
                    android:textAppearance="?android:attr/textAppearanceLargeInverse" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/key_press"
                    android:onClick="onNumClick"
                    android:text="+"
                    android:textAppearance="?android:attr/textAppearanceLargeInverse" />
            </TableRow>
            
            <Button
                android:padding="10dp"
        		android:layout_width="match_parent"
        		android:layout_height="50dp"
        		android:background="@drawable/green_key_press"
		        android:onClick="onNumClick"
		        android:text="ENTER"
		        android:textAppearance="?android:attr/textAppearanceLargeInverse" />
            
        </TableLayout>
    </ScrollView>

    

</RelativeLayout>