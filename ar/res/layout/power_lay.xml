<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity" >
    
    <include layout="@layout/header"
        android:id="@+id/header" />
    
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none" >
        
        <TableLayout
       		android:id="@+id/tableLayout1"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:padding="10dp"
        	android:stretchColumns="0, 1" >
            
            <TableRow
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content" >

            	<Button
            	    android:id="@+id/pwLock"
            	    android:layout_width="0dp"
            	    android:layout_height="50dp"
            	    android:layout_margin="5dp"
            	    android:layout_weight="1"
            	    android:background="@drawable/key_press"
            	    android:onClick="onPowerClick"
            	    android:text="Lock"
            	    android:textAppearance="?android:attr/textAppearanceLargeInverse" />
	


            	<Button
            	    android:id="@+id/pwLogoff"
            	    android:layout_width="0dp"
            	    android:layout_height="50dp"
            	    android:layout_margin="5dp"
            	    android:layout_weight="1"
            	    android:background="@drawable/red_key_press"
            	    android:onClick="onPowerClick"
            	    android:text="Log Off"
            	    android:textAppearance="?android:attr/textAppearanceLargeInverse" />
            	
	        </TableRow>
	        
            <TableRow
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content" >

            	<Button
            	    android:id="@+id/pwSleep"
            	    android:layout_width="0dp"
            	    android:layout_height="50dp"
            	    android:layout_margin="5dp"
            	    android:layout_weight="1"
            	    android:background="@drawable/green_key_press"
            	    android:onClick="onPowerClick"
            	    android:text="Stand By"
            	    android:textAppearance="?android:attr/textAppearanceLargeInverse" />
	
            	<Button
            	    android:id="@+id/pwHib"
            	    android:layout_width="0dp"
            	    android:layout_height="50dp"
            	    android:layout_margin="5dp"
            	    android:layout_weight="1"
            	    android:background="@drawable/key_press"
            	    android:onClick="onPowerClick"
            	    android:text="Hibernate"
            	    android:textAppearance="?android:attr/textAppearanceLargeInverse" />
            	
	        </TableRow>
	        
            <TableRow
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content" >

            	<Button
            	    android:id="@+id/pwSwitch"
            	    android:layout_width="0dp"
            	    android:layout_height="50dp"
            	    android:layout_margin="5dp"
            	    android:layout_weight="1"
            	    android:background="@drawable/key_press"
            	    android:onClick="onPowerClick"
            	    android:text="Switch"
            	    android:textAppearance="?android:attr/textAppearanceLargeInverse" />
	
            	<Button
            	    android:id="@+id/pwRestart"
            	    android:layout_width="0dp"
            	    android:layout_height="50dp"
            	    android:layout_margin="5dp"
            	    android:layout_weight="1"
            	    android:background="@drawable/green_key_press"
            	    android:onClick="onPowerClick"
            	    android:text="Restart"
            	    android:textAppearance="?android:attr/textAppearanceLargeInverse" />
            	
	        </TableRow>
	        
            <Button
                android:id="@+id/pwShutdown"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/red_key_press"
                android:onClick="onPowerClick"
                android:text="Shutdown"
                android:textAppearance="?android:attr/textAppearanceLargeInverse" />
            
        </TableLayout>
        
	</ScrollView>

</LinearLayout>